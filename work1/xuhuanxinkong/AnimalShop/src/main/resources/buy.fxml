<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<VBox fx:id="buyActionContainer" spacing="20" style="-fx-background-color: #f0f8ff;
" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.animalshop.BuyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button fx:id="backBtn" mnemonicParsing="false" onAction="#onBackButtonClick" text="返回首页"
            style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12px 24px;
             -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8px;">
        <font>
            <Font name="System Bold" size="16.0" />
        </font>
    </Button>
    <VBox fx:id="functionsBox" spacing="10" style="-fx-alignment: center;
     -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 10px;
      -fx-border-color: #ddd; -fx-border-radius: 10px;" visible="true">

        <!-- 第一行按钮 -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="buyDogBtn" mnemonicParsing="false" onAction="#onBuyDogClick" text="买入旺财"
                    style="-fx-font-size: 14px; -fx-font-weight: bold;
                     -fx-padding: 10px 20px; -fx-background-color: #4CAF50;
                      -fx-text-fill: white; -fx-background-radius: 6px; -fx-min-width: 180px;"/>

            <Button fx:id="buyCatBtn" mnemonicParsing="false" onAction="#onBuyCatClick" text="买入咪咪"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;
                     -fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 6px;
                      -fx-min-width: 180px;"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="isBtn" mnemonicParsing="false" onAction="#onIsClick" text="是"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;
                     -fx-background-color: #9C27B0; -fx-text-fill: white; -fx-background-radius: 6px;
                      -fx-min-width: 180px;" visible="false"/>

            <Button fx:id="noBtn" mnemonicParsing="false" onAction="#onNoClick" text="否"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;
                     -fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 6px;
                      -fx-min-width: 180px;" visible="false"/>
        </HBox>
  </VBox>
    <TextArea fx:id="outputArea" editable="false" wrapText="true" prefHeight="400"
          style="-fx-font-size: 13px; -fx-font-family: 'Arial'; -fx-background-color: white;
               -fx-border-color: #ddd; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-padding: 10px;">
    </TextArea>
</VBox>